<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#0097a7"
                android:elevation="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Image Information"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="23sp"/>
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/info_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/box_image"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:elevation="5dp" />
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/box_name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Image Name : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/name_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box_size"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/size_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Size : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/size_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textSize="13dp"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box_date"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/date_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Date : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/date_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box_make"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/make_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Make : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/make_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box_model"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/model_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Model : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/model_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box_lat"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lat_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Latitude : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/lat_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box_lng"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lng_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Longitude : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/lng_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box_orientation"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/orientation_titlebox"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Orientation : "
                            android:textSize="18dp"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:id="@+id/orientation_textbox"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textSize="13dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>